root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[.gitconfig]
indent_style = tab

[*.gitconfig]
indent_style = tab

[*.ini]
indent_size = 4

# html is not minified so reduce character output by using real tabs
# use indent size 4 for parity with PHP
[*.{erb,hbs,html,marko,mustache,xml}]
indent_style = tab

[*.{css,less,sass,scss}]
insert_final_newline = true

[*.{js,json,jsx,ts,tsx}]
insert_final_newline = true

# 4 space indentation (pep8)
[*.py]
indent_style = space
indent_size = 4

[*.{bash,sh,zsh}]
max_line_length = 78

[Makefile]
indent_style = tab
